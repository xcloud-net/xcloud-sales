{
  "Urls": "http://*:6001",
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Hangfire": "Warning",
      "RedLockNet": "Warning",
      "IdentityServer4": "Warning",
      "DotNetCore.CAP": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Hangfire": "Warning",
        "RedLockNet": "Warning",
        "IdentityServer4": "Warning",
        "DotNetCore.CAP": "Warning"
      }
    }
  },
  "Sentry": {
    "Dsn": ""
  },
  "RemoteServices": {
    "Gateway": {
      "BaseUrl": "http://${app:server_ip}:8888"
    }
  },
  "Redis": {
    "IsEnabled": "true",
    "Configuration": "${app:redis:host}:${app:redis:port}"
  },
  "TencentCloud": {
    "AppId": "",
    "SecretId": "",
    "SecretKey": "",
    "ContainerName": "optimise required:optional-for-mall-api",
    "Region": "ap-shanghai",
    "KeyDurationSecond": 600
  },
  "app": {
    "name": "mall-api",
    "server_ip": "localhost",
    "dev_server": "${app:server_ip}",
    "config": {
      "init_db": "true",
      "apm": "false",
      "debug": "true"
    },
    "mysql": {
      "host": "${app:dev_server}",
      "port": 3306,
      "username": "root",
      "password": "123"
    },
    "redis": {
      "host": "${app:dev_server}",
      "port": 6379
    }
  },
  "Wx": {
    "MP": {
      "AppID": "#############",
      "AppSecret": "********"
    }
  },
  "ConnectionStrings": {
    "Platform": "Server=${app:mysql:host};Port=${app:mysql:port};Database=sys-platform;Uid=${app:mysql:username};Pwd=${app:mysql:password};CharSet=utf8;pooling=true;SslMode=none;",
    "XSales": "Server=${app:mysql:host};Port=${app:mysql:port};Database=xsales;Uid=${app:mysql:username};Pwd=${app:mysql:password};CharSet=utf8;pooling=true;SslMode=None;"
  }
}